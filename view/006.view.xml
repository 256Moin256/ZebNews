<mvc:View
    controllerName="zebnews.controller.Main"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:c="sap.ui.core"
    displayBlock="true"
    height="100%"
    busyIndicatorDelay="0"
>
    <Page title="Hazrat Ismail-Ishaaq Alaihissalam" titleAlignment="Center" showNavButton="true"
        navButtonPress="back">
        <content>
            <c:Fragment fragmentName="zebnews.view.name" type="XML" />

            <FlexBox justifyContent="Center" class="sapUiMediumMarginTop">
                <Title text="Part 01">
                </Title>
            </FlexBox>

            <FlexBox justifyContent="Center" class="">
                <ExpandableText
                    maxCharacters="200"
                    overflowMode="Popover"
                    textAlign="Left"
                    textDirection="LTR"
                    class="sapUiSmallMarginBegin"
                    text="{M1>/Ambiya_e_Kiram/Hazrat_Ismail-Ishaaq_Alaihissalam/0/text}">
                </ExpandableText>
            </FlexBox>
        </content>
        <footer>
            <c:Fragment fragmentName="zebnews.view.power" type="XML" />
        </footer>
    </Page>
</mvc:View>