<mvc:View
    controllerName="zebnews.controller.Main"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    xmlns="sap.m"
    displayBlock="true"
    height="100%"
    busyIndicatorDelay="0"
>
    <Page title="Hazrat Ayyub Alaihissalam" titleAlignment="Center" showNavButton="true"
        navButtonPress="back">
        <core:Fragment fragmentName="zebnews.view.name" type="XML" />

        <FlexBox justifyContent="Center" class="sapUiMediumMarginTop">
            <Title text="Part 01">
            </Title>
        </FlexBox>

        <FlexBox justifyContent="Center" class="">
            <ExpandableText
                maxCharacters="200"
                overflowMode="Popover"
                textAlign="Left"
                textDirection="LTR"
                class="sapUiSmallMarginBegin"
                text="{M1>/Ambiya_e_Kiram/Hazrat_Ayyub_Alaihissalam/0/text}">
            </ExpandableText>
        </FlexBox>

        <FlexBox justifyContent="Center" class="sapUiMediumMarginTop">
            <Title text="Part 02">
            </Title>
        </FlexBox>

        <FlexBox justifyContent="Center" class="">
            <ExpandableText
                maxCharacters="200"
                overflowMode="Popover"
                textAlign="Left"
                textDirection="LTR"
                class="sapUiSmallMarginBegin"
                text="{M1>/Ambiya_e_Kiram/Hazrat_Ayyub_Alaihissalam/1/text}">
            </ExpandableText>
        </FlexBox>
        <footer>
            <core:Fragment fragmentName="zebnews.view.power" type="XML" />
        </footer>
    </Page>
</mvc:View>