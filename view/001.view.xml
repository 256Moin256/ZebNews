<mvc:View
    controllerName="zebnews.controller.Main"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    displayBlock="true"
    height="100%"
    busyIndicatorDelay="0"
>
    <Page showHeader="false">
        <content>
            <FlexBox justifyContent="Center">
                <Title text="Hazrat Aadam Alaihissalam" titleStyle="H3" class="sapUiSmallMarginTop"></Title>
            </FlexBox>
            <FlexBox justifyContent="Center">
                <Title text="Zeb News | Naushad Ahmed Razvi" titleStyle="H5"
                    class="sapUiSmallMarginTop"></Title>
            </FlexBox>

            <FlexBox justifyContent="Center" class="sapUiMediumMarginTop">
                <Title text="Part 01">
                </Title>
            </FlexBox>

            <FlexBox justifyContent="Center" class="">
                <ExpandableText
                    maxCharacters="200"
                    overflowMode="Popover"
                    textAlign="Left"
                    textDirection="LTR"
                    class="sapUiSmallMarginBegin"
                    text="{M1>/Ambiya_e_Kiram/Hazrat_Aadam_Alaihissalam/0/text}"></ExpandableText>
            </FlexBox>

            <FlexBox justifyContent="Center" class="sapUiMediumMarginTop">
                <Title text="Part 02">
                </Title>
            </FlexBox>

            <FlexBox justifyContent="Center" class="">
                <ExpandableText
                    maxCharacters="200"
                    overflowMode="Popover"
                    textAlign="Left"
                    textDirection="LTR"
                    class="sapUiSmallMarginBegin"
                    text="{M1>/Ambiya_e_Kiram/Hazrat_Aadam_Alaihissalam/1/text}"></ExpandableText>
            </FlexBox>

            <FlexBox justifyContent="Center" class="sapUiMediumMarginTop">
                <Title text="Part 03">
                </Title>
            </FlexBox>

            <FlexBox justifyContent="Center" class="">
                <ExpandableText
                    maxCharacters="200"
                    overflowMode="Popover"
                    textAlign="Left"
                    textDirection="LTR"
                    class="sapUiSmallMarginBegin"
                    text="{M1>/Ambiya_e_Kiram/Hazrat_Aadam_Alaihissalam/2/text}"></ExpandableText>
            </FlexBox>

            <FlexBox justifyContent="Center" class="sapUiMediumMarginTop">
                <Title text="Full">
                </Title>
            </FlexBox>

            <FlexBox justifyContent="Center">
                <ExpandableText
                    maxCharacters="200"
                    overflowMode="Popover"
                    textAlign="Left"
                    textDirection="LTR"
                    class="sapUiSmallMarginBegin"
                    text="{M1>/Ambiya_e_Kiram/Hazrat_Aadam_Alaihissalam/3/text}"></ExpandableText>
            </FlexBox>

        </content>
        <footer>
            <core:Fragment fragmentName="zebnews.view.power" type="XML" />
        </footer>
    </Page>
</mvc:View>